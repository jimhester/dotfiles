# This tmux statusbar config was created by tmuxline.vim
# on Mon, 27 Apr 2020

set -g status-justify "left"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=colour187,bg=colour239"
set -g status-right-style "none"
set -g pane-active-border-style "fg=colour239"
set -g status-style "none,bg=colour244"
set -g message-style "fg=colour187,bg=colour239"
set -g pane-border-style "fg=colour244"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=colour187,bg=colour244"
set -g status-left "#[fg=colour187,bg=colour244] #S #[fg=colour244,bg=colour244,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour244,bg=colour244,nobold,nounderscore,noitalics]#[fg=colour187,bg=colour244] %Y-%m-%d  %H:%M #[fg=colour244,bg=colour244,nobold,nounderscore,noitalics]#[fg=colour187,bg=colour244] #h "
setw -g window-status-format "#[fg=colour187,bg=colour244] #I #[fg=colour187,bg=colour244] #W "
setw -g window-status-current-format "#[fg=colour244,bg=colour239,nobold,nounderscore,noitalics]#[fg=colour187,bg=colour239] #I #[fg=colour187,bg=colour239] #W #[fg=colour239,bg=colour244,nobold,nounderscore,noitalics]"
